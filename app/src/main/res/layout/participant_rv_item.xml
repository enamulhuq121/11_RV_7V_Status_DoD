<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:elevation="8dp"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvParticipantName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="participant Name"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/tvParticipantGender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="3dp"
                android:text="sex"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvParticipantDOB"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="3dp"
                android:text="DOB"
                android:textColor="@color/black" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvParticipantOccupation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="3dp"
            android:text="Occupation"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvParticipantHobbies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="3dp"
            android:text="Hobbies"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvParticipantStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="3dp"
            android:text="Status"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvParticipantDOD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="3dp"
            android:text="Date of Death"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/idBtnDeleteItem"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Delete" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
